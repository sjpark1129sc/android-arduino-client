<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- IP 주소 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="원격지 IP 주소" />

        <EditText
            android:id="@+id/ipEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 113.198.233.228"
            android:inputType="text" />

        <!-- 포트 번호 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="포트 번호" />

        <EditText
            android:id="@+id/portEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예: 8080"
            android:inputType="number" />

        <!-- 연결 버튼 -->
        <Button
            android:id="@+id/connectButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연결" />

        <!-- LED 제어 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4-bit 데이터 값 (0~15)" />

        <EditText
            android:id="@+id/bitValueEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <!-- 제어 버튼들 -->
        <Button
            android:id="@+id/sendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전송(WRITE)" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="초기화" />

        <Button
            android:id="@+id/autoStartButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자동 읽기 시작" />

        <Button
            android:id="@+id/autoStopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자동 읽기 종료" />

        <Button
            android:id="@+id/manualReadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="수동 읽기" />

        <!-- 결과 표시 -->
        <TextView
            android:id="@+id/tempResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="온도 값: -"
            android:textColor="#FF0000" />

        <TextView
            android:id="@+id/humResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="습도 값: -"
            android:textColor="#FF0000" />

        <!-- 종료 버튼 -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료" />

        <!-- 차트 -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>